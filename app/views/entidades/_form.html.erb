<%= form_for(entidade) do |f| %>
  <% if entidade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entidade.errors.count, "error") %> encontrado(s):</h2>

      <ul>
      <% entidade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= f.label 'Tipo', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.collection_select(:tipo_id, @tipos, :id, :nome, {}, { class: "form-control" } ) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Nome', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :cnpj, "CNPJ", class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Descrição', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_area :descricao, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Logradouro', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :logradouro, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'estado', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.collection_select(:estado, @ufs, :last, :first, {}, { class: "form-control" } ) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Cidade', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :cidade, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'CEP', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :cep, class: "form-control" %>
    </div>
  </div>


  <br/>
  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>
